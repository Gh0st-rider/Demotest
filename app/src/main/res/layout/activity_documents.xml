<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DocumentsActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/header_documents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_documents"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/header_panel"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white">

                <ImageButton
                    android:id="@+id/ib_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@android:color/transparent"
                    android:src="@drawable/arrow_back_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/proximanova_regular"
                    android:gravity="center_vertical"
                    android:text="Documents"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_20" />

                <RelativeLayout
                    android:id="@+id/toolbarOptionNotification"
                    android:layout_width="?android:attr/actionBarSize"
                    android:layout_height="?android:attr/actionBarSize"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_notification"
                        android:layout_width="55dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@drawable/notification"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_notification_Count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/red_circle"
                        android:gravity="center"
                        android:maxLength="2"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_documents"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_dl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_15"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/iv_dl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_weight="3"
                    android:fontFamily="@font/proximanova_regular"
                    android:text="Driving Licence"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_15"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".5"
                    android:src="@drawable/right_black_24dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/dark_grey" />


            <LinearLayout
                android:id="@+id/ll_rc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_15"
                android:weightSum="4">

