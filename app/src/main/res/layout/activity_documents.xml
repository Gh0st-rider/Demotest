                android:background="@color/dark_grey" />


            <LinearLayout
                android:id="@+id/ll_pv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_15"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/iv_pv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
