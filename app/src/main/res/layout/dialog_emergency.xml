<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/_20sdp"
    android:paddingBottom="@dimen/_20sdp"
    android:weightSum="3">


    <ImageView
        android:layout_height="@dimen/_50sdp"
        android:layout_width="@dimen/_70sdp"
        android:id="@+id/iv_sos"
        android:src="@drawable/ic_sos"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:weightSum="3"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ll_police"
            android:layout_weight="1"
            android:background="?selectableItemBackground"

            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_height="@dimen/_40sdp"
                android:layout_width="@dimen/_50sdp"
                android:id="@+id/police"
                android:src="@drawable/ic_policeman"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_police"
                android:text="Call Police"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_semibold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ll_call"
            android:visibility="gone"
            android:layout_weight="1"
            android:background="?selectableItemBackground"

            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_height="@dimen/_40sdp"
                android:layout_width="@dimen/_50sdp"
                android:id="@+id/callEmer"
                android:src="@drawable/ic_notebook"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_emer"
                android:text="Call Emergency"
                android:textSize="@dimen/_9sdp"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_semibold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ll_customer"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_height="@dimen/_40sdp"
                android:layout_width="@dimen/_50sdp"
                android:id="@+id/callcus"
                android:src="@drawable/ic_customer_service"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cus"
                android:text="SuDrives Support"
                android:textSize="@dimen/_9sdp"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_semibold"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/dismiss"
        android:layout_margin="@dimen/_20sdp"
        android:text="Dismiss"
        android:background="@drawable/rounded_corner_shape_primary"
        android:textColor="@color/white"
        android:textAllCaps="false"/>

</LinearLayout>