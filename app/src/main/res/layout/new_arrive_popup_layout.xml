<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_ET"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/padding_10"
            app:cardElevation="@dimen/padding_5"
            app:contentPadding="@dimen/padding_10"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/map_reached" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:fontFamily="@font/proximanova_regular"
                    android:text="@string/are_you_sure_you_have_arrived_at_the_pick_up"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <Button
                        android:id="@+id/btn_ET_cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@color/colorAccent"
                        android:text="@string/cancel"
                        android:textAllCaps="false"
                        android:layout_weight=".50"
                        android:fontFamily="@font/proximanova_regular"
                        android:layout_marginRight="@dimen/margin_10"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_ET_submit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".50"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:fontFamily="@font/proximanova_regular"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@color/colorPrimary"
                        android:text="@string/continues"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        />


                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>

