<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimary"
        />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/rel_image"
                    app:layout_constraintWidth_percent="0.20"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_10">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/user" />

                    <ImageButton
                        android:id="@+id/ib_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:background="@android:color/transparent"
                        android:src="@drawable/camera" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_shape_grey"
                    app:layout_constraintWidth_percent="0.70"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/margin_20"
                    android:id="@+id/ll_name"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:paddingStart="@dimen/padding_10"
                    android:paddingEnd="@dimen/padding_10"
                    android:paddingTop="@dimen/padding_5"
                    android:paddingBottom="@dimen/padding_5"
                    app:layout_constraintStart_toEndOf="@+id/rel_image"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/padding_7"
                            android:src="@drawable/name" />

                        <EditText
                            android:id="@+id/et_registration_fName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                            android:fontFamily="@font/proximanova_regular"
                            android:hint="@string/full_name"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:padding="@dimen/padding_5"
                            android:singleLine="true"
                            android:textSize="@dimen/text_15" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/placeholder" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_shape_grey"
                    app:layout_constraintWidth_percent="0.70"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginStart="@dimen/margin_10"
                    app:layout_constraintTop_toBottomOf="@+id/ll_name"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:paddingStart="@dimen/padding_10"
                    android:paddingEnd="@dimen/padding_10"
                    android:paddingTop="@dimen/padding_5"
                    android:paddingBottom="@dimen/padding_5"
                    app:layout_constraintStart_toEndOf="@+id/rel_image"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/padding_7"
                            android:src="@drawable/mobile_no" />

                        <EditText
                            android:id="@+id/et_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                            android:fontFamily="@font/proximanova_regular"
                            android:hint="@string/mobile_number"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:enabled="false"
                            android:clickable="false"
                            android:padding="@dimen/padding_5"
                            android:singleLine="true"
                            android:textSize="@dimen/text_15" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/placeholder" />
                </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:layout_constraintTop_toBottomOf="@+id/rel_image"
                        android:background="@drawable/top_corners">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="@dimen/_10sdp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_10"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:paddingRight="@dimen/padding_6"
                                        android:src="@drawable/vehicle_no" />

                                    <EditText
                                        android:id="@+id/et_registration_vehicalNo"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:fontFamily="@font/proximanova_regular"
                                        android:hint="@string/vehical_number"
                                        android:inputType="text"
                                        android:maxLength="10"
                                        android:maxLines="1"
                                        android:padding="@dimen/padding_5"
                                        android:singleLine="true"
                                        android:textAllCaps="true"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/placeholder" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_10"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:paddingRight="@dimen/padding_10"
                                        android:src="@drawable/location" />

                                    <EditText
                                        android:id="@+id/et_registration_location"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:fontFamily="@font/proximanova_regular"
                                        android:hint="@string/location"
                                        android:inputType="textCapSentences|textNoSuggestions"
                                        android:maxLines="1"
                                        android:padding="@dimen/padding_5"
                                        android:singleLine="true"
                                        android:textSize="@dimen/text_15" />


                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/placeholder"
                                    android:visibility="gone" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_15"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/delivery_van" />

                                    <Spinner
                                        android:id="@+id/spinner_registration_vehicalType"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_10"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/proximanova_regular" />


                                </LinearLayout>





                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/placeholder" />


                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:id="@+id/const_multiple_opt"
                                    android:visibility="gone"
                                    android:layout_marginTop="@dimen/margin_10">

                                    <CheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/cb_mini"
                                        android:visibility="gone"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        android:text="Mini"/>

                                    <CheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/cb_micro"
                                        android:visibility="gone"

                                        android:layout_marginStart="@dimen/margin_10"
                                        android:layout_marginEnd="@dimen/margin_10"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toEndOf="@+id/cb_mini"
                                        android:text="Micro"/>

                                    <CheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/cb_sedan"
                                        android:visibility="gone"

                                        android:layout_marginStart="@dimen/margin_10"
                                        android:layout_marginEnd="@dimen/margin_10"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toEndOf="@+id/cb_micro"
                                        android:text="Sedan"/>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_15"

                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:src="@drawable/delivery_van" />

                                    <Spinner
                                        android:id="@+id/spinner_registration_vehicalname"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_10"
                                        android:layout_weight="1"

                                        android:fontFamily="@font/proximanova_regular" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_15"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:src="@drawable/delivery_van" />

                                    <EditText
                                        android:id="@+id/et_vehicle_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_10"
                                        android:layout_weight="1"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/proximanova_regular"

                                        android:hint="@string/vehicle_name"
                                        android:padding="@dimen/padding_5"
                                        android:textSize="@dimen/text_15" />


                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"

                                    android:background="@color/placeholder" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_15"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingRight="@dimen/padding_6"
                                        android:src="@drawable/search" />

                                    <Spinner
                                        android:id="@+id/spinner_registration_search"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_5"
                                        android:layout_weight="1"

                                        android:fontFamily="@font/proximanova_regular" />


                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/placeholder"
                                    android:visibility="gone" />


                                <LinearLayout
                                    android:id="@+id/ll_registration_drivingLicense"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/margin_15"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:paddingRight="@dimen/padding_10"
                                        android:src="@drawable/license" />

                                    <TextView

                                        android:id="@+id/tv_registration_uploadDrivingL"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:fontFamily="@font/proximanova_regular"
                                        android:hint="@string/upload_driving_licence"

                                        android:maxLines="1"
                                        android:padding="@dimen/padding_5"
                                        android:singleLine="true"
                                        android:textSize="@dimen/text_15" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/margin_5"
                                        android:src="@drawable/attachment" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/placeholder"
                                    android:visibility="gone" />


                                <LinearLayout
                                    android:id="@+id/ll_registration_drivingRC"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/margin_15"
                                    android:gravity="center"
                                    android:orientation="horizontal"

                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingRight="@dimen/padding_10"
                                        android:src="@drawable/certificate" />

                                    <TextView
                                        android:id="@+id/tv_registration_uploadRC"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:fontFamily="@font/proximanova_regular"
                                        android:hint="@string/upload_rc"

                                        android:maxLines="1"
                                        android:padding="@dimen/padding_5"
                                        android:singleLine="true"
                                        android:textSize="@dimen/text_15" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/margin_5"

                                        android:src="@drawable/attachment" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/placeholder"
                                    android:visibility="gone" />


                                <LinearLayout
                                    android:id="@+id/ll_fitness_certificate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/margin_15"
                                    android:gravity="center"
                                    android:orientation="horizontal"

                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingRight="@dimen/padding_10"
                                        android:src="@drawable/certificate" />

                                    <TextView
                                        android:id="@+id/tv_fitness_certificate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:fontFamily="@font/proximanova_regular"
                                        android:hint="@string/fitness_certificate"

                                        android:maxLines="1"
                                        android:padding="@dimen/padding_5"
                                        android:singleLine="true"
                                        android:textSize="@dimen/text_15" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/margin_5"

                                        android:src="@drawable/attachment" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/placeholder"
                                    android:visibility="gone" />


                                <LinearLayout
                                    android:id="@+id/ll_insurance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/margin_15"
                                    android:gravity="center"
                                    android:orientation="horizontal"

                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingRight="@dimen/padding_10"
                                        android:src="@drawable/certificate" />

                                    <TextView
                                        android:id="@+id/tv_insurance"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:fontFamily="@font/proximanova_regular"
                                        android:hint="@string/insurance"

                                        android:maxLines="1"
                                        android:padding="@dimen/padding_5"
                                        android:singleLine="true"
                                        android:textSize="@dimen/text_15" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/margin_5"

                                        android:src="@drawable/attachment" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/placeholder"
                                    android:visibility="gone" />


                                <LinearLayout
                                    android:id="@+id/ll_permit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/margin_15"
                                    android:gravity="center"
                                    android:orientation="horizontal"

                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingRight="@dimen/padding_10"
                                        android:src="@drawable/certificate" />

                                    <TextView
                                        android:id="@+id/tv_permit"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:fontFamily="@font/proximanova_regular"
                                        android:hint="@string/permit"

                                        android:maxLines="1"
                                        android:padding="@dimen/padding_5"
                                        android:singleLine="true"
                                        android:textSize="@dimen/text_15" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/margin_5"

                                        android:src="@drawable/attachment" />

                                </LinearLayout>


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/placeholder"

                                    android:visibility="gone" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_15"
                                    android:minHeight="40dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_state"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_centerVertical="true"

                                        android:src="@drawable/country"

                                        />

                                    <com.sudrives.sudrivespartner.utils.views.SearchableSpinner
                                        android:id="@+id/sp_state"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/margin_10"
                                        android:layout_marginLeft="@dimen/margin_10"
                                        android:layout_toEndOf="@+id/iv_state"
                                        android:layout_toRightOf="@+id/iv_state"
                                        android:textSize="@dimen/text_15" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"

                                    android:background="@color/placeholder" />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_15"
                                    android:minHeight="40dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_city"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_centerVertical="true"

                                        android:src="@drawable/country"

                                        />

                                    <com.sudrives.sudrivespartner.utils.views.SearchableSpinner
                                        android:id="@+id/sp_city"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/margin_10"
                                        android:layout_marginLeft="@dimen/margin_10"
                                        android:layout_toEndOf="@+id/iv_city"
                                        android:layout_toRightOf="@+id/iv_city"
                                        android:textSize="@dimen/text_15" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"

                                    android:background="@color/placeholder" />


                                <TextView
                                    android:id="@+id/tv_change_language"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:fontFamily="@font/proximanova_regular"
                                    android:text="@string/change_application_language"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/text_18" />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:paddingTop="@dimen/padding_5"
                                    android:paddingBottom="@dimen/padding_5">

                                    <TextView
                                        android:id="@+id/tv_english"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:fontFamily="@font/proximanova_regular"
                                        android:text="@string/english"

                                        android:textColor="@color/text_color"
                                        android:textSize="@dimen/text_16" />

                                    <Switch
                                        android:id="@+id/language_switch"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true" />

                                    <TextView
                                        android:id="@+id/tv_hindi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginRight="@dimen/margin_10"
                                        android:fontFamily="@font/proximanova_regular"
                                        android:text="@string/hindi"

                                        android:textColor="@color/dark_grey"
                                        android:textSize="@dimen/text_16" />

                                </RelativeLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"

                                android:background="@color/placeholder" />


                            <TextView
