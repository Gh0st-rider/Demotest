<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginEnd="@dimen/margin_10"
        app:cardCornerRadius="@dimen/margin_5"
        app:cardMaxElevation="@dimen/margin_5"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:padding="@dimen/margin_10">

            <ImageView
                android:id="@+id/my_wallet_image"
                android:layout_width="@dimen/margin_60"
                android:layout_height="@dimen/margin_60"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:src="@drawable/notification" />

            <TextView
                android:id="@+id/my_wallet_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_toRightOf="@+id/my_wallet_image"
                android:fontFamily="@font/proximanova_regular"
                android:text="@string/wallet"
                android:textColor="@color/text_grey" />

            <TextView
                android:id="@+id/wallet_balance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_wallet_text"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_toRightOf="@+id/my_wallet_image"
                android:fontFamily="@font/proximanova_regular"
                android:text="Balance"
                android:textColor="@color/text_grey" />

            <TextView
                android:id="@+id/total_balance_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/margin_5"
                android:fontFamily="@font/proximanova_regular"
                android:text="200.56"
                android:textColor="@color/green" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/pay_now_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_10"
        app:cardCornerRadius="@dimen/margin_5"
        app:cardMaxElevation="@dimen/margin_5"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:padding="@dimen/margin_10">

            <ImageView
                android:id="@+id/pay_now_image"
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_40"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:src="@drawable/notification" />

            <TextView
                android:id="@+id/pay_now_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_toRightOf="@+id/pay_now_image"
                android:fontFamily="@font/proximanova_regular"
                android:text="Pay now"
                android:textColor="@color/text_grey" />

            <ImageView
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_30"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_navigate_next_black_24dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/add_money_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_10"
        app:cardCornerRadius="@dimen/margin_5"
        app:cardMaxElevation="@dimen/margin_5"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:padding="@dimen/margin_10">

            <ImageView
                android:id="@+id/add_money_image"
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_40"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:src="@drawable/notification" />

            <TextView
                android:id="@+id/add_money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_toRightOf="@+id/add_money_image"
                android:fontFamily="@font/proximanova_regular"
                android:text="Add Money to wallet"
                android:textColor="@color/text_grey" />

            <ImageView
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_30"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_navigate_next_black_24dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/my_transaction_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:fontFamily="@font/proximanova_regular"
        android:text="My Transaction"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@color/dark_grey" />

    <TextView
        android:id="@+id/no_transaction_available_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_20"
        android:fontFamily="@font/proximanova_regular"
        android:text="No Transaction Available"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_18" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transaction_history_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>