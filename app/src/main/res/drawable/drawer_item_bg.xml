<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:state_checked="true" android:drawable="@drawable/activated_dr"


        >

        <shape>

            <padding android:bottom="1dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/placeholder"/>


        </shape>



    </item>


    <item android:state_pressed="true" android:drawable="@drawable/activated_dr"


        >

        <shape>

            <padding android:bottom="1dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/placeholder"/>


        </shape>



    </item>


    <item android:drawable="@drawable/default_dr">

        <shape>

            <padding android:bottom="1dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/placeholder"/>


        </shape>


    </item>

</selector>